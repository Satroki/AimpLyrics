<Window x:Class="AimpLyricsPlugin.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AimpLyricsPlugin"
        xmlns:ex="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="设置" Height="327.178" Width="510" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <GroupBox Header="基本设置">
            <StackPanel>
                <TextBlock Text="{Binding ElementName=sSzie,Path=Value,StringFormat='字体大小：{0}'}" Margin="2"/>
                <Slider x:Name="sSzie" Minimum="10" Maximum="50" ValueChanged="FontSzie_ValueChanged" Margin="2"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="歌词颜色" Grid.Column="1">
            <ex:ColorCanvas x:Name="cc" SelectedColorChanged="SelectedColorChanged"/>
        </GroupBox>
    </Grid>
</Window>
